import time

# ----- PROFILE SETUP
def greet_user():
    print("\nWelcome to the GenZ Life Simulator!")
    name = input("Enter your name: ").strip().title()
    age = input("Enter your age: ").strip()
    print(f"\nHey {name}! Let's see how your digital day goes.\n")
    return {"name": name, "age": age}

# ---------- BASIC CHATBOT
responses = {
    "hi": "Hey there!",
    "hello": "Hello! Ready to begin?",
    "how are you": "I'm functioning as expected, unlike most humans.",
    "bye": "Goodbye! Try not to scroll all day."
}

def get_response(user_input):
    return responses.get(user_input.lower(), "Interesting. Let's see what happens next...")

def end_chat():
    print("See you soon! Stay productive out there.")

# PLAYER STATS
stats = {"energy": 100, "points": 0, "mood": "neutral"}
internet_usage = 0
profile = {}

def show_status():
    print(f"\nSTATUS - Energy: {stats['energy']} | Points: {stats['points']} | Mood: {stats['mood']} | Internet Level: {internet_usage}/100")

def show_next_options():
    print("\nWhat would you like to do next?")
    print("Options: study | eat | play | sleep | scroll | binge | detox | future | quit")

# ACTIVITY LOGIC
def update_stats(activity):
    global internet_usage
    if activity == "study":
        stats["energy"] -= 15
        stats["points"] += 20
        stats["mood"] = "focused"
        internet_usage = max(0, internet_usage - 5)
        print("You studied instead of scrolling. Productivity unlocked.")
    elif activity == "eat":
        stats["energy"] += 10
        stats["mood"] = "satisfied"
        print("You ate something nutritious. Progress!")
    elif activity == "sleep":
        stats["energy"] = 100
        stats["mood"] = "rested"
        internet_usage = max(0, internet_usage - 10)
        print("You took a proper nap. Brain recharged.")
    elif activity == "play":
        stats["energy"] -= 10
        stats["points"] += 10
        stats["mood"] = "excited"
        internet_usage += 5
        print("You played a game. Fun, but still screen time.")
    elif activity == "scroll":
        internet_usage += 15
        stats["energy"] -= 5
        stats["mood"] = "distracted"
        print("You started scrolling and lost track of time.")
    elif activity == "binge":
        internet_usage += 25
        stats["energy"] -= 10
        stats["mood"] = "lazy"
        print("You watched 'just one more episode'... three times.")
    elif activity == "future":
        future_prediction()
    elif activity == "detox":
        digital_detox()
    elif activity == "quit":
        end_game()
        return False
    else:
        print("That's not a valid option. Try again.")
    internet_check()
    return True

# ---- INTERNET ADDICTION TRACKER
def internet_check():
    global internet_usage
    if internet_usage < 0:
        internet_usage = 0
    if internet_usage < 30:
        print("Your screen time is healthy.")
    elif internet_usage < 60:
        print("You're getting a bit too comfortable online.")
    elif internet_usage < 90:
        print("Warning: You're entering zombie scrolling mode.")
    else:
        print("Critical Level: You've achieved full digital burnout!")

# DIGITAL DETOX
def digital_detox():
    global internet_usage
    print("\nDigital Detox Activated...")
    time.sleep(1)
    internet_usage = max(0, internet_usage - 30)
    stats["energy"] += 10
    stats["mood"] = "refreshed"
    print("You took a break from screens and feel human again.")

# FUTURE PREDICTION
def future_prediction():
    print("\nAnalyzing your digital behavior...")
    time.sleep(1.2)
    if internet_usage > 80:
        prediction = "You'll probably start a podcast about why Wi-Fi is life."
    elif stats["points"] > 50:
        prediction = "You'll build a screen time app... and ignore its warnings."
    elif stats["energy"] < 40:
        prediction = "You'll invent coffee that syncs with Wi-Fi."
    else:
        prediction = "You'll find a rare balance between screens and sunlight."
    print(f"\nFuture Prediction: {prediction}")

# PROFILE SUMMARY
def show_profile_summary():
    print("\nFINAL PROFILE SUMMARY")
    print("=" * 40)
    print(f"Name: {profile['name']}")
    print(f"Age: {profile['age']}")
    print(f"Energy: {stats['energy']}")
    print(f"Points: {stats['points']}")
    print(f"Mood: {stats['mood']}")
    print(f"Internet Addiction Level: {internet_usage}/100")
    
    if internet_usage >= 90:
        title = "Full-Time Screen Zombie"
    elif internet_usage >= 60:
        title = "Certified Binge Watcher"
    elif internet_usage >= 30:
        title = "Balanced Net User"
    else:
        title = "Offline Legend"
    
    print(f"Title: {title}")
    print("=" * 40)
    print("Reminder: Go outside. Touch some sunlight.")

# ---- END GAME
def end_game():
    print("\nGAME SUMMARY:")
    print(f"Energy: {stats['energy']} | Points: {stats['points']} | Mood: {stats['mood']} | Internet Level: {internet_usage}/100")
    if internet_usage > 80:
        print("Final Verdict: Certified Screen Addict")
    elif internet_usage > 50:
        print("Final Verdict: Slightly addicted, but functioning.")
    else:
        print("Final Verdict: Balanced lifestyle. Well done.")
    show_profile_summary()
    print("\nThanks for playing the GenZ Life Simulator: Internet Edition.")
    exit()

# ---- LIFE SIMULATOR
def life_simulator():
    show_next_options()
    while True:
        show_status()
        show_next_options()
        activity = input("\nEnter your action: ").lower()
        if not update_stats(activity):
            break

# ---- MAIN CHAT LOOP
def chatbot():
    global profile
    profile = greet_user()
    print("You can chat with me or type 'play' anytime to start your simulation.\n")
    while True:
        user_input = input("You: ").lower()
        if "play" in user_input or "game" in user_input:
            choice = input("Start the life simulator? (yes/no): ").lower()
            if choice == "yes":
                life_simulator()
                break
            else:
                print("No problem, we can just chat for now.")
        elif user_input == "bye":
            end_chat()
            break
        else:
            print("AI:", get_response(user_input))

# ---- RUN ---
chatbot()
